<html>
	<head>
		<title>How neat is this?</title>
	</head>
    <body id="testing-quotes">
        {string foo = "My Great Template!!!"; DateTime dt = DateTime.Now;}
        <h1>@{foo}</h1>
        <p>The current time is @{dt.ToString("MMM dd, yyyy hh:mm:ss")}</p>

